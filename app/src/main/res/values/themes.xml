<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.UniTrackNetV3" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="ImageRounded" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="ChipProtocolStyle" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipStrokeWidth">4dp</item>
        <item name="chipStrokeColor">@color/gray</item>
        <item name="chipBackgroundColor">@color/black</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="checkedIconVisible">false</item>
        <item name="chipCornerRadius">14dp</item>
    </style>

    <style name="CustomChipGroup" parent="Widget.MaterialComponents.ChipGroup">
        <!-- Sin cambio especial aquí -->
    </style>

    <style name="CustomChipChoiceOutlined" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/black</item> <!-- fondo oscuro fijo -->
        <item name="chipStrokeColor">@color/chip_stroke_selector</item>
        <item name="chipStrokeWidth">2dp</item>
        <item name="chipCornerRadius">24dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="chipIconVisible">false</item>
    </style>

    <style name="CustomBottomNavStyle" parent="Widget.Material3.BottomNavigationView">
        <item name="android:minHeight">48dp</item> <!-- reduce altura -->
        <item name="itemIconSize">20dp</item> <!-- opcional: íconos más pequeños -->
        <item name="android:paddingTop">1dp</item>
        <item name="android:paddingBottom">1dp</item>
        <item name="android:layout_marginBottom">20dp</item>
    </style>


    <style name="Theme.MyApp.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/black</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_unitracknet</item>
        <item name="postSplashScreenTheme">@style/Base.Theme.UniTrackNetV3</item>
    </style>

    <style name="Theme.UniTrackNetV3" parent="Base.Theme.UniTrackNetV3" />
</resources>